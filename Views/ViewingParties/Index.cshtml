@model IEnumerable<healthicly.Models.ViewingParty>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>All Requested Viewing Parties</h3>

<p>
    <a asp-action="Create">Submit a new viewing party request</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ContentTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DayAndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsApproved)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ContentTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DayAndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsApproved)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
